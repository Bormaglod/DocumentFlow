<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">
  <targets>
    <target name="error-file" xsi:type="File" layout="${longdate}|${level}|${callsite:includeNamespace=false}|строка ${callsite-linenumber}|${message}" fileName="${basedir}DocumentFlow.error"/>
    <target name="info-file" xsi:type="File" layout="${longdate}|${level}|${callsite:includeNamespace=false}|строка ${callsite-linenumber}|${message}" fileName="${basedir}DocumentFlow.info"/>
    <target name="console" xsi:type="ColoredConsole"/>
  </targets>
  <rules>
    <logger name="*" level="Debug" writeTo="console" />
    <logger name="*" level="Info" writeTo="info-file" />
    <logger name="*" level="Warn" writeTo="error-file" />
    <logger name="*" level="Error" writeTo="error-file" />
  </rules>
</nlog>
