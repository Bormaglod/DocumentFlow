{
  "name": "measurement",
  "viewer": {
    "dataset": {
      "select": "select m.id, m.status_id, s.note as status_name, m.code, m.name, m.abbreviation from measurement m join status s on s.id = m.status_id",
      "select-id": "select m.id, m.status_id, s.note as status_name, m.code, m.name, m.abbreviation from measurement m join status s on s.id = m.status_id where id = :id"
    },
    "data-type": "Directory",
    "columns": [
      {
        "datafield": "id",
        "text": "Id",
        "type": "Text",
        "width": 180,
        "visible": false
      },
      {
        "datafield": "status_id",
        "text": "Код состояния",
        "type": "Integer",
        "width": 80,
        "visible": false,
        "allow-grouping": true
      },
      {
        "datafield": "status_name",
        "text": "Состояние",
        "type": "Text",
        "width": 110,
        "visible": false,
        "allow-grouping": true
      },
      {
        "datafield": "code",
        "text": "Код",
        "type": "Text",
        "width": 90
      },
      {
        "datafield": "name",
        "text": "Наименование",
        "type": "Text",
        "hideable": false,
        "auto-size": true
      },
      {
        "datafield": "abbreviation",
        "text": "Сокр. наименование",
        "type": "Text",
        "width": 160
      }
    ]
  },
  "editor": {
    "dataset": {
      "select": "select id, code, name, abbreviation from measurement where id = :id",
      "update": "update measurement set code = :code, name = :name, abbreviation = :abbreviation where id = :id"
    },
    "controls": [
      {
        "type": "TextBox",
        "text": "Код",
        "datafield": "code",
        "label-width": 160
      },
      {
        "type": "TextBox",
        "text": "Наименование",
        "datafield": "name",
        "label-width": 160,
        "edit-width": 360
      },
      {
        "type": "TextBox",
        "text": "Сокр. наименование",
        "datafield": "abbreviation",
        "label-width": 160,
        "edit-width": 360
      }
    ],
    "conditions": [
      {
        "controls": [ "code", "name", "abbreviation" ],
        "enable": {
          "states": [ "compiled" ]
        }
      }
    ]
  }
}