{
  "name": "archive_price",
  "viewer": {
    "dataset": {
      "select": "select ap.id, ap.status_id, s.note as status_name, ap.date_updated, ap.price_value, u.name as user_name from archive_price ap join user_alias u on u.id = ap.user_updated_id join status s on s.id = ap.status_id and ap.owner_id = :owner_id and status_id = 1100"
    },
    "data-type": "Directory",
    "toolbar": {
      "button-style": "Image",
      "icon-size": "Small"
    },
    "commandbar-visible": false,
    "columns": [
      {
        "datafield": "id",
        "text": "Id",
        "type": "Text",
        "width": 180,
        "visible": false
      },
      {
        "datafield": "status_id",
        "text": "Код состояния",
        "type": "Integer",
        "width": 80,
        "visible": false,
        "allow-grouping": true
      },
      {
        "datafield": "status_name",
        "text": "Состояние",
        "type": "Text",
        "width": 110,
        "visible": false,
        "allow-grouping": true
      },
      {
        "datafield": "date_updated",
        "text": "Дата изменения",
        "type": "Date",
        "width": 150,
        "hideable": false
      },
      {
        "datafield": "price_value",
        "text": "Цена",
        "type": "Numeric",
        "width": 100,
        "format-mode": "Currency"
      },
      {
        "datafield": "user_name",
        "text": "Пользователь",
        "type": "Text",
        "auto-size": true
      }
    ],
    "sorts": [
      {
        "name": "date_updated",
        "direction": "Descending"
      }
    ]
  }
}