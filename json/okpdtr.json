{
  "name": "okpdtr",
  "viewer": {
    "dataset": {
      "select": "select o.id, o.status_id, s.note as status_name, o.code, o.name from okpdtr o join status s on s.id = o.status_id",
      "select-id": "select o.id, o.status_id, s.note as status_name, o.code, o.name from okpdtr o join status s on s.id = o.status_id where o.id = :id"
    },
    "data-type": "Directory",
    "columns": [
      {
        "datafield": "id",
        "text": "Id",
        "type": "Text",
        "width": 180,
        "visible": false
      },
      {
        "datafield": "status_id",
        "text": "Код состояния",
        "type": "Integer",
        "width": 80,
        "visible": false,
        "allow-grouping": true
      },
      {
        "datafield": "status_name",
        "text": "Состояние",
        "type": "Text",
        "width": 110,
        "visible": false,
        "allow-grouping": true
      },
      {
        "datafield": "code",
        "text": "Код",
        "type": "Text",
        "width": 90
      },
      {
        "datafield": "name",
        "text": "Наименование",
        "type": "Text",
        "hideable": false,
        "auto-size": true
      }
    ]
  },
  "editor": {
    "dataset": {
      "select": "select id, code, name from okpdtr where id = :id",
      "update": "update okpdtr set code = :code, name = :name where id = :id"
    },
    "controls": [
      {
        "type": "TextBox",
        "text": "Код",
        "datafield": "code",
        "label-width": 120
      },
      {
        "type": "TextBox",
        "text": "Наименование",
        "datafield": "name",
        "label-width": 120,
        "edit-width": 360
      }
    ],
    "conditions": [
      {
        "controls": [ "code", "name" ],
        "enable": {
          "states": [ "compiled" ]
        }
      }
    ]
  }
}