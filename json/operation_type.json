{
  "name": "operation_type",
  "viewer": {
    "dataset": {
      "select": "select ot.id, ot.status_id, s.note as status_name, ot.name, ot.hourly_salary from operation_type ot join status s on (s.id = ot.status_id)",
      "select-id": "select ot.id, ot.status_id, s.note as status_name, ot.name, ot.hourly_salary from operation_type ot join status s on (s.id = ot.status_id) where ot.id = :id"
    },
    "data-type": "Directory",
    "columns": [
      {
        "datafield": "id",
        "text": "Id",
        "type": "Text",
        "width": 180,
        "visible": false
      },
      {
        "datafield": "status_id",
        "text": "Код состояния",
        "type": "Integer",
        "width": 80,
        "visible": false
      },
      {
        "datafield": "status_name",
        "text": "Состояние",
        "type": "Text",
        "width": 110,
        "visible": false
      },
      {
        "datafield": "name",
        "text": "Наименование",
        "type": "Text",
        "hideable": false,
        "auto-size": true
      },
      {
        "datafield": "hourly_salary",
        "text": "Расценка, руб./час",
        "type": "Numeric",
        "width": 200,
        "format-mode": "Currency",
        "horizontal-align": "Right"
      }
    ]
  },
  "editor": {
    "dataset": {
      "select": "select id, name, hourly_salary from operation_type where id = :id",
      "update": "update operation_type set name = :name, hourly_salary = :hourly_salary where id = :id"
    },
    "controls": [
      {
        "type": "TextBox",
        "text": "Наименование",
        "datafield": "name",
        "label-width": 140,
        "edit-width": 380
      },
      {
        "type": "Currency",
        "text": "Расценка, руб./час",
        "datafield": "hourly_salary",
        "label-width": 140,
        "edit-width": 200
      }
    ],
    "conditions": [
      {
        "controls": [ "name", "hourly_salary" ],
        "enable": {
          "states": [ "compiled" ]
        }
      }
    ],
    "childs": [
      {
        "name": "view-archive-price"
      }
    ]
  }
}