{
  "name": "report-balance-goods",
  "viewer": {
    "dataset": {
      "select": "select id, name, opening_balance, income, expense, closing_balance from balance_sheet_goods(:from_date, :to_date)"
    },
    "data-type": "Report",
    "columns": [
      {
        "datafield": "id",
        "text": "Id",
        "type": "text",
        "width": 180,
        "visible": false
      },
      {
        "datafield": "name",
        "text": "Материал",
        "type": "text",
        "auto-size": true,
        "hideable": false
      },
      {
        "datafield": "opening_balance",
        "text": "Остаток на начало",
        "type": "numeric",
        "digits": 3,
        "horizontal-align": "Right",
        "width": 150
      },
      {
        "datafield": "income",
        "text": "Приход",
        "type": "numeric",
        "digits": 3,
        "horizontal-align": "Right",
        "width": 150
      },
      {
        "datafield": "expense",
        "text": "Расход",
        "type": "numeric",
        "digits": 3,
        "horizontal-align": "Right",
        "width": 150
      },
      {
        "datafield": "closing_balance",
        "text": "Остаток на конец",
        "type": "numeric",
        "digits": 3,
        "horizontal-align": "Right",
        "width": 150
      }
    ]
  }
}